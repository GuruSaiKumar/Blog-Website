<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= content %></p>

<% for(let i = 0; i < posts.length ; i++){ %>
<div class="card">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body">
    <h2 class="card-title"><%= posts[i].title %></h2>
    <p class="card-text"><%= posts[i].content.substring(0,100) + ' ... ' %></p>
    <a href="posts/<%= posts[i].title %>" class="btn btn-primary">Read More</a>
  </div>
</div>
<% } %> 



<%- include("partials/footer") -%>

